<header  id="header" class="fixed top-0 left-0 right-0 z-50 flex bg-transparent transition-all duration-100 p-2 shadow-md">
  <nav class="flex flex-col flex-1 mx-4 md:mx-auto md:flex-row md:justify-around">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <p class='text-primary text-2xl font-bold'>Syila<span class='text-secondary'>Printer</span></p>
      </div>
  
      <!-- hamburger menu icon -->
      <button id="btn-menu" title="menu">
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#4f46e5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="cursor-pointer lucide lucide-menu-icon lucide-menu md:hidden">
          <line x1="4" x2="20" y1="12" y2="12"/>
          <line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/>
        </svg>
      </button>

    </div>
      <ul id="menu" class="hidden py-2 md:py-0 space-y-4 md:space-y-0 text-white md:flex md:flex-row md:gap-8 text-md md:text-xl bg-black/80">
        <li><a href='#home' class='hover:text-primary drop-shadow-text'>Beranda</a></li>
        <li><a href="#tentang-kami" class="hover:text-primary drop-shadow-text">Tentang Kami</a></li>
        <li><a href="#produk" class="hover:text-primary drop-shadow-text">Produk</a></li>
        <li><a href="#kontak" class="hover:text-primary drop-shadow-text">Kontak</a></li>
      </ul>
  </nav>
</header>

<script>
  const btnMenu = document.getElementById('btn-menu')!;
  const menuList = document.getElementById('menu')!;
  const header = document.getElementById('header')!;
  const links = menuList.querySelectorAll('a');

  btnMenu.addEventListener('click', () => {
    menuList.classList.toggle('hidden')
  })

  menuList.addEventListener('click', () => {
    menuList.classList.add('hidden')
  })

  window.addEventListener('scroll', () => {
    menuList.classList.add('hidden')

    if (window.scrollY > 5) {
      header.classList.replace('bg-transparent','bg-white');
      menuList.classList.replace("text-white", "text-gray-700")
      menuList.classList.remove("bg-black/80")
      links.forEach(link => link.classList.add('drop-shadow-text'))
    } else {
      header.classList.replace('bg-white', 'bg-transparent');
      menuList.classList.replace("text-gray-700", "text-white")
      menuList.classList.add("bg-black/80")
      links.forEach(link => link.classList.add('drop-shadow-text'))
    }
  });
</script>